%% -*- erlang -*-
[
    {blockchain_http, [
        {port, 8080},
        {throttle, #{
            %% how much request time is allowed
            request_time => 20000,
            %% over how long
            request_interval => 60000,
            %% requests shorter than this do not count towards quota
            grace_time => 0,
            %% log requests that take longer than this
            log_longer_than => 10000,
            %% put remaining request time in a http response header
            debug => false
        }},
        {db_ro_pool, [
            {size, 100},
            %% ets, named, or atomics
            {watcher_type, atomics},
            %% hash or round_robin
            {dispatch_mechanism, round_robin}
        ]},
        {db_rw_pool, [
            {size, 2},
            %% ets, named, or atomics
            {watcher_type, atomics},
            %% hash or round_robin
            {dispatch_mechanism, round_robin}
        ]},
        {db_ro_handlers, [
            bh_route_blocks,
            bh_route_accounts,
            bh_route_hotspots,
            bh_route_txns,
            bh_route_elections,
            bh_route_challenges,
            bh_route_pending_txns,
            bh_route_stats,
            bh_route_oracle,
            bh_route_vars,
            bh_route_snapshots,
            bh_route_cities,
            bh_route_rewards,
            bh_route_ouis,
            bh_route_locations,
            bh_route_dc_burns,
            bh_route_state_channels,
            bh_route_validators
        ]},
        {db_rw_handlers, [
            bh_route_pending_txns
        ]}
    ]},
    {lager, [
        {suppress_supervisor_start_stop, true},
        {killer_hwm, 1000},
        {async_threshold, undefined},
        {killer_reinstall_after, 5000},
        {flush_queue, true},
        {flush_threshold, 500},
        {handlers, [
            {lager_console_backend, [{level, info}]}
        ]}
    ]}
].
